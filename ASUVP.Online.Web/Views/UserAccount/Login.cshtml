@model ASUVP.Online.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Вход в систему";
}

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <h3>Портал "ЗАО Русагротранс"</h3>


        @using (Html.BeginForm("Login", "UserAccount", new {ViewBag.ReturnUrl}, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <p>Введите свой логин и пароль</p>
            <div class="form-group">
                @Html.TextBoxFor(model => model.UserName, new {@class = "form-control", placeholder = "Логин"})
                @Html.ValidationMessageFor(model => model.UserName)
            </div>

            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new {@class = "form-control", placeholder = "Пароль"})
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <button type="submit" class="btn btn-primary block full-width m-b">Войти</button>
        }

        <!-- <input type="button" value="Войти с помощью Windows" class="btn btn-primary block full-width m-b" onclick="@("window.location.href='" + @Url.Action("WinLogin", "UserAccount") + "'");" /> -->
    </div>
</div>