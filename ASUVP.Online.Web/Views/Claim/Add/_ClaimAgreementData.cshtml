@using System.Web.UI.WebControls
@using ASUVP.Core.DataAccess.Model
@model Claim
<style>
    #ClaimAgreement .claimAgreementTr > td:first-child {
        width: 10%;
        text-align: left;
    }

    #ClaimAgreement .claimAgreementTr > td {
        width: 90%;
        padding-top: .5em !important;
        padding-bottom: .5em !important;
    }
</style>
<table id="ClaimAgreement" style="width: 100%">
    <tr class="claimAgreementTr">
        <td>Договор</td>
        <td>
            @{
                Html.DevExpress().TextBox(s =>
                {
                    s.Width = Unit.Percentage(100);
                    s.ReadOnly = false;
                    s.Name = nameof(Claim.AgreementName);
                }).Render();
            }
        </td>
        </tr>
    <tr class="claimAgreementTr">
        <td>Заказчик</td>
        <td>
            @{
                Html.DevExpress().TextBox(s =>
                {
                    s.Width = Unit.Percentage(100);
                    s.ReadOnly = false;
                    s.Name = nameof(Claim.CustomerCompanyName);
                }).Render();
            }
        </td>
        </tr>
    <tr class="claimAgreementTr">
        <td>Исполнитель</td>
        <td>
            @{
                Html.DevExpress().TextBox(s =>
                {
                    s.Width = Unit.Percentage(100);
                    s.ReadOnly = false;
                    s.Name = nameof(Claim.PerformerCompanyName);
                }).Render();
            }
        </td>
    </tr>
</table>
