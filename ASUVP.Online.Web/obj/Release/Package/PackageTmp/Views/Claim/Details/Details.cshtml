    <div class="next">
        @{ Html.RenderPartial("Details/_ClaimNote", Model); }
    </div>

    <div class="next">
        @{ Html.RenderPartial("Details/_ClaimCondition", Model); }
    </div>
    <div class="next">
        @{ Html.RenderPartial("Details/_ClaimLoadingSchedule", Model); }
    </div>

    </div>
