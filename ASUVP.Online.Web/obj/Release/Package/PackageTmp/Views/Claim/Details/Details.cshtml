                    <table style="width: 100%">
                        <tr>
                            <td style="width: 210px;padding-right:5px" class="right-ali">Количество контейнеров (шт.)</td>
                            <td class="daysEditor">
                                @Html.DevExpress().TextBox(s =>
                                {
                                    s.Width = Unit.Percentage(100);
